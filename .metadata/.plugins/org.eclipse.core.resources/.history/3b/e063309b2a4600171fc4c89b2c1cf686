/**
 * 
 * @author atifmahmud
 *  Date: 31st May 2017
 *  
 *  This program is used to demonstrate the purpose of the keyword static, and examine
 *  object references and variable values
 *
 */


public class Object {
	private String name;
	private int fieldOne;
	private int fieldTwo;
	private static int staticField = 75; // This will remain same for all instances of object
	
	
	// Constructor without the use of keyword "this"
	public Object (String name, int fieldOne, int fieldTwo){
		name = name;
		fieldOne = fieldOne;
		fieldTwo = fieldTwo;
	}
	
	Object object = new Object("Object One", 5, 7);
	Object SecondObject = new Object("Object Two", 50, 70);
	
	public void main(String [] args){
		
		System.out.printf(object.name + "\nField One: %d\nField Two: %d\nStaticField: %d" 
		+ SecondObject.name +"\nField One: %d\nField Two: %d\nStatic Field: %d", 
		object.fieldOne, object.fieldTwo, object.staticField, SecondObject.fieldOne, SecondObject.fieldTwo, SecondObject.staticField);
		
     		
}
	
}
